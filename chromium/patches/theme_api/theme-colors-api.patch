+ExtensionFunction::ResponseAction ThemeColorsGetFunction::Run() {
+  const ui::ColorProvider* provider = GetColorProvider();
+  if (!provider) {
+    return RespondNow(Error("ColorProvider not available. Browser window may not be ready."));
+  }
+
+  base::Value::Dict colors = GetAllThemeColors(provider);
+
+  return RespondNow(WithArguments(std::move(colors)));
+}
