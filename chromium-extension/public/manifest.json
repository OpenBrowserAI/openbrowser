{
  "name": "OpenBrowser",
  "description": "OpenBrowser Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "type": "module",
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icon_neutral.png",
    "48": "icon_neutral.png",
    "128": "icon_neutral.png"
  },
  "side_panel": {
    "default_path": "sidebar.html",
    "openPanelOnActionClick": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "windows",
    "sidePanel",
    "storage",
    "scripting",
    "debugger",
    "alarms",
    "notifications",
    "downloads",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": []
    }
  ]
}
